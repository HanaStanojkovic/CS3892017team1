<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackgrounda"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jacksonhoang.citygoer.MainActivity">


    <Button
        android:id="@+id/phrases"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="#80cac7c7"
        android:onClick="phraseSelection"
        android:text="Learn Mandarin"
        android:textColor="#ff8800"
        android:textSize="20dp" />

    <Button
        android:id="@+id/foods"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phrases"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="#80cac7c7"
        android:onClick="foodSelection"
        android:text="Get Food"
        android:textColor="#ff8800"
        android:textSize="20dp" />

    <Button
        android:id="@+id/attractions"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foods"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#80cac7c7"
        android:onClick="attractionSelection"
        android:text="Must-see Attractions"
        android:textColor="#ff8800"
        android:textSize="20dp" />

    <Button
        android:id="@+id/facts"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attractions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="#80cac7c7"
        android:onClick="factsSelection"
        android:text="Learn Facts"
        android:textColor="#ff8800"
        android:textSize="20dp" />

    <Button
        android:id="@+id/publicTransit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="#80cac7c7"
        android:onClick="publicTransitSelection"
        android:text="Public Transit"
        android:textColor="#ff8800"
        android:textSize="20dp" />
</RelativeLayout>
